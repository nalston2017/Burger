<div class="row">
  <center>
    <div class="col-md-6">
      <h4 class="red_font">Ready to eat!</h4>
      <div id="ready_to_eat">
        <!-- Insert burgers ready to eat-->
        {{#each burgers}}
          {{#unless devoured}}
            <form action="burgers/eat/{{id}}" method="post">
              <div class="input-group">
                <li class="form-control">{{id}}.{{name}}</li>
                <span class="input-group-btn">
                  <button type="submit" class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
              </div>
            </form>
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">

        <!-- Insert burgers eaten -->
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.name}}</li>
              <span class="input-group-btn">
                <button type="button" class="btn btn-info whine-button">Whine!</button>
              </span>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </center>
</div>
